<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="grp.team7.kelvin.dao.OrderItemDao">
    <select id="findByOrder" parameterType="java.lang.Integer"
        resultType="grp.team7.kelvin.entity.OrderItem">
        SELECT
            *
        FROM
            orderitem
        WHERE order_id = #{orderId}
    </select>

    <insert id="add" keyProperty="Id" useGeneratedKeys="true"
        parameterType="grp.team7.kelvin.entity.OrderItem">
        INSERT INTO 
        orderitem(order_id,dish_id,dish_price,dish_num,dish_class)
        VALUES
        (#{orderId},#{dishId},#{dishPrice},#{dishNum},#{dishClass})
    </insert>

    <insert id="addByList" keyProperty="Id" useGeneratedKeys="true"
        parameterType="java.util.List">
        INSERT INTO 
        orderitem(order_id,dish_id,dish_price,dish_num,dish_class)
        VALUES
    <foreach collection="list" item="item" index="index" separator="," >
        (#{item.orderId},#{item.dishId},#{item.dishPrice},#{item.dishNum},#{item.dishClass})
    </foreach> 

    </insert>

    <delete id="deleteByOrder" parameterType="java.lang.Integer" >
        DELETE FROM orderitem
        WHERE order_id = #{orderId}
    </delete>
    
    <update id="update"
        parameterType="grp.team7.kelvin.entity.OrderItem">
        UPDATE orderitem
        <set>
        order_id = #{orderId},
        dish_id = #{dishId},
        dish_price = #{dishPrice},
        dish_num = #{dishNum},
        dish_class = #{dishClass}
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer" >
        DELETE FROM orderitem
        WHERE order_id = #{orderId} AND dish_id = #{dishId}
    </delete>
    
</mapper>
